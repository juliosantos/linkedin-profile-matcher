    <title>LinkedIn Profile Matcher</title>

    <!-- Bootstrap Core CSS -->
    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="main.css" rel="stylesheet" type="text/css">
  </head>

  <body id="results">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <% ranks.each do |rank| %>
            <div class="media">
              <a class="pull-left" href="#">
                <img class="media-object" src="<%= rank[:profile].picture %>">
              </a>
              <div class="media-body">
                <h4 class="media-heading"><%= rank[:profile].name %></h4>
                <p><span class="label label-default">Affinity: <%= rank[:affinity] %></span></p>
                <p><%= rank[:profile].summary %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>

